{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "GDB",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/a.out",
        "args": ["43_no_nl"],
        "cwd": "${workspaceFolder}",
        "preLaunchTask": "build",
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Activer l'impression des symboles",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      },
      {
        "name": "GDB + Valgrind",
        "type": "cppdbg",
        "request": "launch",
        "program": "/usr/bin/valgrind",
        "args": [
          "--leak-check=full",
          "--show-leak-kinds=all",
          "--track-origins=yes",
          "${workspaceFolder}/a.out",
          "41_with_nl"
        ],
        "cwd": "${workspaceFolder}",
        "preLaunchTask": "build",
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": []
      }
    ]
  }
